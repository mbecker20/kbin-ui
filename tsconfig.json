{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 12",
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "commonJS",
    "target": "ESNext",
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "moduleResolution": "node"
  }
}