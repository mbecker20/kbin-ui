{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 12",
  "compilerOptions": {
    "lib": [
      "es2019",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string",
      "DOM"
    ],
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "jsx": "react",
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true
  }
}